<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="64dip">

	<TextView
			android:id="@+id/item_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="14sp"/>

	<com.heavyplayer.audioplayerrecorder.widget.AudioPlayerLayout
			android:id="@+id/item_audio_player"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="64dip"
			app:timeCurrentPositionColor="@color/color_time"
			app:timeDurationColor="@android:color/darker_gray"/>


</LinearLayout>